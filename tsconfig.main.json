{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "jsx": "preserve"
  },
  "include": [
    "src/main.ts",
    "src/preload.ts",
    "src/server.ts",
    "src/database.ts",
    "src/settings-manager.ts",
    "src/background-task-manager.ts",
    "src/tasks/**/*.ts",
    "src/db/**/*.ts"
  ],
  "exclude": [
    "src/index.tsx",
    "src/AppHome.tsx",
    "src/AppSettings.tsx",
    "src/settings.tsx",
    "src/components/**/*"
  ]
}
