{
  "name": "FamilyWatchNight",
  "version": "0.1.3",
  "description": "Cross-platform desktop application to bring fun and safety to family movie nights.",
  "main": "dist/main/index.js",
  "homepage": "./",
  "scripts": {
    "clean": "rimraf dist",
    "build:main": "node scripts/use-testing-noop.js && npm run build:main:raw",
    "build:main:for-integration-testing": "node scripts/use-testing-active.js && npm run build:main:raw",
    "build:main:raw": "node scripts/generate-app-info.js && tsc -p tsconfig.main.json && node scripts/copy-migrations.js",
    "build:renderer": "vite build",
    "build:main:watch": "node scripts/generate-app-info.js && node scripts/copy-migrations.js && tsc -p tsconfig.main.json --watch",
    "renderer:vite": "vite",
    "electron:debug": "cross-env ELECTRON_START_URL=http://localhost:5173 electron . --inspect=5858 --remote-debugging-port=9222",
    "test": "npm run test:unit && npm run test:integration && npm run test:features",
    "test:unit": "jest",
    "test:integration": "npm run build:main:for-integration-testing && cross-env NODE_ENV=test playwright test",
    "test:features": "npm run build:main:for-integration-testing && cross-env NODE_ENV=test cucumber-js",
    "build": "npm run clean && npm run build:main && npm run build:renderer && electron-builder --publish=onTag",
    "dev": "npm run build:main && concurrently \"npm:build:main:watch\" \"npm:renderer:vite\" \"npm:electron:debug\"",
    "dev:test": "npm run build:main:for-integration-testing && concurrently \"npm:build:main:watch\" \"npm:renderer:vite\" \"npm:electron:debug\"",
    "pack": "npm run clean && npm run build:main && npm run build:renderer && electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "tray",
    "app"
  ],
  "author": "",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "@cucumber/cucumber": "^12.7.0",
    "@playwright/test": "^1.58.2",
    "@types/better-sqlite3": "^7.6.11",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.1.3",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.6.1",
    "electron-builder": "^26.8.1",
    "jest": "^30.2.0",
    "playwright": "^1.58.0",
    "rimraf": "^6.1.3",
    "ts-jest": "^29.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "csv-parse": "^6.1.0",
    "electron-store": "^11.0.2",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "build": {
    "appId": "com.familywatchnight.app",
    "productName": "Family Watch Night",
    "files": [
      "dist/**/*",
      "assets/**/*",
      "public/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "publish": {
      "provider": "github",
      "releaseType": "draft"
    }
  }
}
