{
  "name": "famfilmfav-desktop",
  "version": "1.0.0",
  "description": "Family Film Favorites Desktop App",
  "main": "src/main.js",
  "homepage": "./",
  "scripts": {
    "webpack": "webpack --mode development",
    "webpack:watch": "webpack --mode development --watch",
    "webpack:prod": "webpack --mode production",
    "start": "npm run webpack && electron .",
    "dev": "npm run webpack:watch & electron . --remote-debugging-port=9222",
    "debug": "npm run webpack && electron . --remote-debugging-port=9223 --inspect=5858",
    "debug:main": "node --inspect=5858 --require ./node_modules/electron/cli.js .",
    "build": "npm run webpack:prod && electron-builder",
    "pack": "npm run webpack:prod && electron-builder --dir"
  },
  "keywords": [
    "electron",
    "tray",
    "app"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "@babel/preset-react": "^7.28.5",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "electron": "^40.0.0",
    "electron-rebuild": "^3.2.9",
    "style-loader": "^4.0.0",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.3"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "electron-store": "^11.0.2",
    "express": "^5.2.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "build": {
    "appId": "com.famfilmfav.app",
    "productName": "FamFilmFav",
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
