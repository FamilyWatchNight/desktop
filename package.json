{
  "name": "famfilmfav-desktop",
  "version": "1.0.0",
  "description": "Family Film Favorites Desktop App",
  "main": "dist/main.js",
  "homepage": "./",
  "scripts": {
    "build:main": "tsc -p tsconfig.main.json && node scripts/copy-migrations.js",
    "build:main:watch": "tsc -p tsconfig.main.json --watch",
    "webpack": "webpack --mode development",
    "webpack:watch": "webpack --mode development --watch",
    "webpack:serve": "webpack serve --config webpack.config.js --mode development --port 8080",
    "webpack:prod": "webpack --mode production",
    "start": "npm run build:main && npm run webpack && electron .",
    "start:electron:dev": "cross-env ELECTRON_START_URL=http://localhost:8080 electron . --remote-debugging-port=9222",
    "dev": "npm run build:main && concurrently npm:webpack:serve npm:start:electron:dev",
    "dev:watch": "concurrently npm:build:main:watch npm:webpack:serve npm:start:electron:dev",
    "debug": "npm run build:main && npm run webpack && electron . --remote-debugging-port=9223 --inspect=5858",
    "debug:main": "node --inspect=5858 --require ./node_modules/electron/cli.js .",
    "build": "npm run build:main && npm run webpack:prod && electron-builder",
    "pack": "npm run build:main && npm run webpack:prod && electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest",
    "test:integration": "cross-env NODE_ENV=test playwright test"
  },
  "keywords": [
    "electron",
    "tray",
    "app"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.24.0",
    "@electron/rebuild": "^4.0.2",
    "@playwright/test": "^1.58.0",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.10",
    "@types/better-sqlite3": "^7.6.11",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "babel-loader": "^10.0.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "jest": "^30.2.0",
    "playwright": "^1.58.0",
    "react-refresh": "^0.14.0",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.3"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "csv-parse": "^6.1.0",
    "electron-store": "^11.0.2",
    "express": "^5.2.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "build": {
    "appId": "com.famfilmfav.app",
    "productName": "FamFilmFav",
    "files": [
      "dist/**/*",
      "assets/**/*",
      "public/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
