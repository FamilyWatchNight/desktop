{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Electron Main + Renderer",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "webpack:serve",
      "program": ".",
      "args": ["--remote-debugging-port=9222", "--inspect"],
      "env": {
        "ELECTRON_START_URL": "http://localhost:8080"
      },
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Electron Renderer",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "pathMapping": {
        "/": "${workspaceFolder}/",
        "file://": "${workspaceFolder}/"
      },
      "trace": true
    },
    {
      "name": "Debug Server (Express)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/src/server.js",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Attach to Electron Main (Playwright)",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "timeout": 30000,
      "skipFiles": ["<node_internals>/**"]
    }
  ],
  "compounds": [
    {
      "name": "Full Debug",
      "configurations": [
        "Electron Main + Renderer",
        "Electron Renderer"
      ],
      "stopAll": true
    }
  ]
}
