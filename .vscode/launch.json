{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Electron Main",
      "type": "node",
      "request": "attach",
      "port": 5858,
      "restart": true,
      "timeout": 30000,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}"
    },
    {
      "name": "Electron Renderer",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}/src"
    },
    {
      "name": "Attach to Electron Main (Playwright)",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "timeout": 30000,
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "skipFiles": ["<node_internals>/**"]
    }
  ],
  "compounds": [
    {
      "name": "Full Debug",
      "configurations": [
        "Electron Main",
        "Electron Renderer"],
      "stopAll": true
    }
  ]
}
